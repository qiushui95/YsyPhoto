<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.upload.apply.UploadApplyFragment">

    <me.yangcx.base.widgets.YsyTitleView
        android:id="@+id/titleUploadApply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_upload_apply_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/rvUploadApply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:itemSpacing="4dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleUploadApply"
        app:spanCount="3" />
</androidx.constraintlayout.widget.ConstraintLayout>