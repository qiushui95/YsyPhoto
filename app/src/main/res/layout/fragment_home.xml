<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/bnbHome"
        app:layout_constraintEnd_toEndOf="@id/bnbHome"
        app:layout_constraintStart_toStartOf="@id/bnbHome"
        app:layout_constraintTop_toTopOf="@id/bnbHome"
        app:realtimeBlurRadius="10dp"
        app:realtimeOverlayColor="#BBFFFFFF" />

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bnbHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:bnbElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>