<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/item_upload_select_scene"
    tools:context=".ui.upload.select.ItemUploadImageView">

    <View
        android:id="@+id/bgItemUploadSelect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#f00" />

    <ImageView
        android:id="@+id/ivItemUploadSelect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="@id/bgItemUploadSelect"
        app:layout_constraintEnd_toEndOf="@id/bgItemUploadSelect"
        app:layout_constraintStart_toStartOf="@id/bgItemUploadSelect"
        app:layout_constraintTop_toTopOf="@id/bgItemUploadSelect"
        app:layout_constraintWidth_percent="1"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvItemUploadSelectPosition"
        style="@style/styleCommonTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="#80000000"
        android:gravity="center"
        android:scaleX="1"
        android:scaleY="1"
        android:textColor="@color/colorFFFFFFFF"
        android:textSize="64sp"
        app:layout_constraintBottom_toBottomOf="@id/ivItemUploadSelect"
        app:layout_constraintEnd_toEndOf="@id/ivItemUploadSelect"
        app:layout_constraintStart_toStartOf="@id/ivItemUploadSelect"
        app:layout_constraintTop_toTopOf="@id/ivItemUploadSelect"
        tools:text="1" />
</androidx.constraintlayout.motion.widget.MotionLayout>